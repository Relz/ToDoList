{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"target": "es2017"
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules"
	]
}
